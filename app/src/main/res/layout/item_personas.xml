<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/images"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="21dp"
            android:id="@+id/imgfoto"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:id="@+id/txtapellidoprimero"
            android:layout_below="@+id/txtnombrepersona"
            android:layout_alignLeft="@+id/txtnombrepersona"
            android:layout_alignStart="@+id/txtnombrepersona" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtnombrepersona"
            android:layout_alignTop="@+id/imgfoto"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgfoto"
            android:layout_alignLeft="@+id/txtapellidoprimero"
            android:layout_alignStart="@+id/txtapellidoprimero"
            android:id="@+id/txtedadpersona" />

    </RelativeLayout>
</LinearLayout>